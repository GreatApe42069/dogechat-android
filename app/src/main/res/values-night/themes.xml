<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.DogechatAndroid" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- Night: keep black window background -->
        <item name="android:windowBackground">@android:color/black</item>

        <!-- Still use bright yellow bar with dark icons (consistent brand) -->
        <item name="android:statusBarColor">#FFFFFF00</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>